# ─────────────────────────────────────────
# Database
# ─────────────────────────────────────────
DATABASE_URL=postgresql://postgres:<password>@localhost:5432/<database>?schema=public

# ─────────────────────────────────────────
# App Core
# ─────────────────────────────────────────
NODE_ENV=development
PORT=3333
ALLOWED_ORIGINS=http://localhost:3000

# ─────────────────────────────────────────
# Auth
# ─────────────────────────────────────────
JWT_SECRET=super_secure_jwt_secret_key_here

# ─────────────────────────────────────────
# Email (SMTP)
# ─────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASS=yourpassword

# ─────────────────────────────────────────
# Timezone / Scheduling
# ─────────────────────────────────────────
TZ=Asia/Kolkata
REMINDER_TIME=08:00
REMINDER_TIMEZONE=Asia/Kolkata
REMINDER_SKIP_EMPTY=true

# (Optional tuning; will default if missing)
REMINDER_MAX_RETRIES=3
REMINDER_BACKOFF_BASE_MS=1000
