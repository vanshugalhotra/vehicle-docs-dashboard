# ─────────────────────────────────────────
# Database
# ─────────────────────────────────────────
DATABASE_URL=postgresql://postgres:1228@localhost:5432/vehicle_dashboard?schema=public

# ─────────────────────────────────────────
# App Core
# ─────────────────────────────────────────
NODE_ENV=development
PORT=3333
ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ─────────────────────────────────────────
# Auth
# ─────────────────────────────────────────
JWT_SECRET=example@helpmefolks

# ─────────────────────────────────────────
# Email (SMTP)
# ─────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=examplerenewaldesk@gmail.com
SMTP_PASS=************************

# ─────────────────────────────────────────
# Timezone / Scheduling
# ─────────────────────────────────────────
TZ=Asia/Kolkata
REMINDER_TIME=05:30
REMINDER_SKIP_EMPTY=true

# ─────────────────────────────────────────
# Logging
# ─────────────────────────────────────────
LOG_LEVEL=debug  # fatal, error, warn, info, debug, trace
LOG_TO_FILE=true  # Enable/disable file logging
LOG_DIR=./logs    # Directory for log files
LOG_RETENTION_DAYS=30  # Keep logs for 30 days
LOG_MAX_SIZE=10  # Max file size in MB before rotation
LOG_DETAIL=false